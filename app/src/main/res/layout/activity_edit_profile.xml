<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfile"
    android:background="@color/black">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/edit_profile_pic"
        android:src="@color/white"/>

    <TextView
        android:id="@+id/edit_profile_email"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_profile_pic"
        android:layout_marginTop="30dp"
        android:text="EMAIL"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/edit_profile_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_profile_email"
        android:layout_marginTop="30dp"
        android:textCursorDrawable="@color/white"
        android:textColor="@color/white"
        android:hint="Enter your name"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColorHint="@color/off_white"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:id="@+id/edit_profile_phone_number"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_profile_name"
        android:layout_marginTop="30dp"
        android:textCursorDrawable="@color/white"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Enter your phone number"
        android:textColorHint="@color/off_white"/>

    <EditText
        android:id="@+id/edit_profile_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textPostalAddress"
        android:layout_below="@+id/edit_profile_phone_number"
        android:layout_marginTop="30dp"
        android:hint="Enter your Address"
        android:autofillHints="Enter your address"
        android:backgroundTint="@color/white"
        android:textCursorDrawable="@color/white"
        android:textColorHint="@color/off_white"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="SAVE"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/edit_profile_address"
        android:layout_marginTop="50dp"
        android:id="@+id/edit_profile_save"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_below="@id/edit_profile_address"
        android:layout_marginTop="50dp"
        android:id="@+id/edit_profile_cancel"/>
</RelativeLayout>