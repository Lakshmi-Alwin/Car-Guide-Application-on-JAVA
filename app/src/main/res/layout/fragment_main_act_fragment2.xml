<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".support">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">
        <RelativeLayout android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/slider2"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/slider2" />
            <TextView
                android:id="@+id/guides"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:textSize="20dp"
                android:layout_below="@+id/slider2"
                android:layout_marginTop="40dp"
                android:text="@string/guides"
                android:textAppearance="@style/complete_co"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|top"
                />

            <TextView
                android:id="@+id/jedi_like_p"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/guides"
                android:layout_marginTop="30dp"
                android:text="@string/we_got"
                android:textAppearance="@style/jedi_like_p"
                android:gravity="center_horizontal|top"
                />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>