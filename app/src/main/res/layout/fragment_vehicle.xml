<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".vehicle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/regular"
            android:text="Welcome"
            android:textAppearance="@style/vehicle_page"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/vehicle_page_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/regular"
            android:textAppearance="@style/vehicle_page"
            android:textColor="@color/white"
            android:textSize="28sp" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vehicle_page_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/light_font"
            android:text="Glad you joined Wheels!\nAdd your vehicle to unlock its full potential!!!"
            android:textAppearance="@style/vehicle_page"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/car_vehiclepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/vehicle_page" />
    </RelativeLayout>
</FrameLayout>
